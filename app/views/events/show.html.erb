  <%= "Count: " + i.to_s %>
  <table class="table-striped table-bordered ">
    <% i = 0 %>
    <% @tweetsall.each do |tweet| %>
    <tr class="tweet" data-time="<%= tweet.id %>">
      <td><h6><%= tweet.text.html_safe %></h6></td>
    </tr>
    <% i = i + 1 %>
    <% end %>
  </table>
  <%= "Count: " + i.to_s %>
</div>
<br>
<br>

  <% i = 0 %>
  <% @tweetsall.each do |tweet| %>
    <% if tweet.second_pass %>
      <% i = i + 1 %>
    <% end %>
  <% end %>

<div>
  <h2>Filtered</h2>
  <br>
  <%= "Count: " + i.to_s  %>
  <table class="table-striped table-bordered">
    <% i = 0 %>
    <% @tweetsall.each do |tweet| %>
    <% if tweet.second_pass %>
    <tr class="tweet" data-time="<%= tweet.id %>">
      <td><h5><%= tweet.text.html_safe %></h5></td>
    </tr>
    <% i = i + 1 %>
    <% end %>
    <% end %>
  </table>
  <%= "Count: " + i.to_s  %>
</div>
<br>
<br>
<div>
  <h2>Instagam</h2>
  <br>
  <table class="table-striped table-bordered ">
    <% i = 0 %>
    <% @tweetsall.each do |tweet| %>
    <% if tweet.first_pass %>
    <tr class="tweet" data-time="<%= tweet.id %>">
      <td><h6><%= tweet.text.html_safe %></h6></td>
    </tr>
    <td>
      <div class="thumbnail span4">

        <img src="<%= tweet.image %>">
      </div>
    </td>
    <% i = i + 1 %>
    <% end %>
    <% end %>
  </table>
  <%= "Count: " + i.to_s  %>
</div>
<br>
<p>
  <strong><%= model_class.human_attribute_name(:name) %>:</strong><br>
  <%= @event.name %>
</p>
<p>
  <strong><%= model_class.human_attribute_name(:lat) %>:</strong><br>
  <%= @event.lat %>
</p>
<p>
  <strong><%= model_class.human_attribute_name(:long) %>:</strong><br>
  <%= @event.long %>
</p>
<p>
